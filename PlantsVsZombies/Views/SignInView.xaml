<UserControl x:Class="PlantsVsZombies.Views.SignInView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:PlantsVsZombies.ViewModels"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:views="clr-namespace:PlantsVsZombies.Views"
             xmlns:visualControls="clr-namespace:PlantsVsZombies.VisualControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.DataContext>
        <viewModels:SignInViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Image Source="/Assets/Icons/SignBackgroung.jpg"></Image>
        
        <visualControls:CancelButton 
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="60,60,60,0"/>
        
        <Border Style="{StaticResource BorderStackPanelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="506" >
                <TextBlock Text="С возвращением!" Style="{StaticResource CenterTextStyle}" Width="426" Margin="0,40,0,30"/>
                
                <TextBlock Text="Введите ваш никнейм:" Style="{StaticResource LeftTextStyle}"/>
                <Border Style="{StaticResource BorderStyle}">
                    <TextBox Text="{Binding Login}" Style="{StaticResource TextBoxStyle}" Width="426"/>
                </Border>
                
                <TextBlock Text="Введите пароль:" Style="{StaticResource LeftTextStyle}"/>
                <Border Style="{StaticResource BorderStyle}">
                    <PasswordBox x:Name="PasswordBox"  Style="{StaticResource PasswordBoxStyle}" Width="426"/>
                </Border>
                
                <TextBlock Text="{Binding ErrorMessage}" Style="{StaticResource LeftTextStyle}" Foreground="Red" 
                           Margin="40,0,40,10" TextWrapping="Wrap" MinHeight="30"/>
                
                <Grid Margin="40,0,40,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
        
                    <Border Grid.Column="0"  HorizontalAlignment="Left">
                        <Button x:Name="SignInCommandButton" Content="Войти" Command="{Binding SignInCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center" />
                    </Border>
        
                    <Border Grid.Column="1"  HorizontalAlignment="Right">
                        <Button Content="У меня еще нет аккаунта" Command="{Binding NavigateToSignUpCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
        
        <!--
        <svgc:SvgControl Source="/Assets/Icons/Basic.svg"/>
        -->
    </Grid>
</UserControl>
