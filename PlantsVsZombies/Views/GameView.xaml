<UserControl x:Class="PlantsVsZombies.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:PlantsVsZombies.ViewModels"
             xmlns:models="clr-namespace:PlantsVsZombies.Models"
             xmlns:services="clr-namespace:PlantsVsZombies.Services"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:PlantsVsZombies.Converters"
             xmlns:views="clr-namespace:PlantsVsZombies.Views"
             xmlns:visualControls="clr-namespace:PlantsVsZombies.VisualControls"
             d:DataContext="{d:DesignInstance Type=viewModels:GameViewModel, IsDesignTimeCreatable=False}" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <converters:PlantCostConverter x:Key="PlantCostConverter"/>
        <converters:CanAffordConverter x:Key="CanAffordConverter"/>
        
        <ScaleTransform x:Key="BushesScale" ScaleX="1.05" ScaleY="1.05"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- Game Field Background -->

       

        <Grid>
            <Grid x:Name="GameFieldBackground" HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Canvas x:Name="GameField"
                         Grid.Row="1" Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right">
                    <!-- Grid lines for cells -->
                    <Canvas.Children>
                        <!-- Plants will be rendered here -->
                        <!-- Zombies will be rendered here -->
                        <!-- Bullets will be rendered here -->
                        <!-- Suns will be rendered here -->
                    </Canvas.Children>
                </Canvas>

                <Image Grid.RowSpan="3" Grid.Column="2" Grid.Row="0" x:Name="BushRightImage" Stretch="UniformToFill"/>
               
                <Image RenderTransformOrigin="0.5, 0.5" Grid.Row="0" Grid.Column="1" x:Name="BushTopImage" Stretch="UniformToFill">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="180"/>
                            <ScaleTransform ScaleX="1.12" ScaleY="1.63"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Image Grid.Row="2" 
                       Grid.Column="1" 
                       x:Name="BushBottomImage" 
                       Stretch="UniformToFill" 
                       RenderTransformOrigin="0.5, 0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="180"/>
                            <ScaleTransform ScaleX="1.12" ScaleY="1.55"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Grid>

           
            <!--
            <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Right" Stretch="Uniform">
                <Viewbox.Effect>
                    <DropShadowEffect Direction="190"
                        ShadowDepth="20"
                        BlurRadius="20"
                        Opacity="0.35"
                        Color="#4A783A"/>
                </Viewbox.Effect>

                <Grid>
                
                    <Image Source="{Binding LocationImageSource}" 
                           Grid.RowSpan="3"
                           x:Name="LocationImage"/>
                        

                   
                </Grid>
            </Viewbox>
               -->
        </Grid>
        
        <Image Source="{Binding RoofImageSource}"
               IsHitTestVisible="False"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Stretch="Uniform">
            <Image.Effect>
                <DropShadowEffect Opacity="0.5"
                                  Color="Black"
                                  ShadowDepth="20"
                                  BlurRadius="40"/>
            </Image.Effect>
        </Image>
        
        <!-- Plant Shop -->
        <Border Background="#FFE7DB" Padding="10" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10" CornerRadius="20">

            <StackPanel Orientation="Vertical">
                <Border Background="#515150"
                        Padding="10"
                        Margin="5 0 5 10"
                        CornerRadius="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Session.SunBalance}" 
                                   VerticalAlignment="Center"
                                    Foreground="#FFE7DB" FontSize="28" />

                        <Image Source="/Assets/Icons/sun_balance.png" Width="32" Height="32"
                               Margin="8 2 0 0"/>
                    </StackPanel>
                </Border>

                <Border Margin="10" Background="#515150"
                        CornerRadius="5"
                        Height="5"/>

                <ItemsControl ItemsSource="{Binding AvailablePlants}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5 10" 
                                  Width="120"
                                  Height="130">
                                <Border x:Name="PlantShopItem" 
                                    Background="#515150" 
                                    CornerRadius="20" Cursor="Hand"
                                    Padding="0 15 0 0"
                                    MouseLeftButtonDown="PlantShopItem_MouseLeftButtonDown"
                                    MouseMove="PlantShopItem_MouseMove"
                                    MouseLeave="PlantShopItem_MouseLeave">
                                    
                                    <Border.IsEnabled>
                                        <MultiBinding Converter="{StaticResource CanAffordConverter}">
                                            <Binding Path="."/> <!-- Or bind to Plant property -->
                                            <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=views:GameView}"/> <!-- GameViewModel -->
                                            <Binding Path="DataContext.Session.SunBalance" RelativeSource="{RelativeSource AncestorType=views:GameView}"/>
                                        </MultiBinding>
                                    </Border.IsEnabled>
                                    
                                        <StackPanel>
                                            <Viewbox Width="56" Height="56" Stretch="Uniform" 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center">
                                                <ContentControl Content="{Binding}"/>
                                            </Viewbox>
                                          
                                        </StackPanel>
                                </Border>
                                
                                <Border CornerRadius="20"
                                        Background="Black"
                                        Opacity="0.5"
                                        Visibility="{Binding ElementName=PlantShopItem, Path=IsEnabled, Converter={StaticResource OppositeBoolToVisibilityConverter}}"/>
                                
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center"
                                            Margin="0 0 0 10">
                                            
                                    <TextBlock Text="{Binding Path=Type, Converter={StaticResource PlantCostConverter}}"
                                               VerticalAlignment="Center"
                                               Foreground="#FFE7DB" FontSize="16" />

                                    <Image Source="/Assets/Icons/sun_balance.png" Width="20" Height="20"
                                           Margin="6 2 0 0"/>
                                </StackPanel>
                                
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        
        <!-- Menu Button (Top Right) -->
        <Button Content="Меню" Command="{Binding ToggleMenuCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="10" Padding="10,5"/>


        <!-- Score and Difficulty (Bottom Right) -->
        <Border Background="#FF4A4A4A" Padding="10" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Margin="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding Session.Score, StringFormat='Счёт: {0:F1}'}" 
                           Foreground="White" FontSize="14"/>
                <TextBlock Text="{Binding Session.Difficulty, StringFormat='Сложность: {0}'}" 
                           Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>
        
        <!-- Menu Overlay -->
        <Border Background="#AA000000" Visibility="{Binding IsMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border Style="{StaticResource BorderStackPanelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Padding="50">
                <StackPanel>
                    <TextBlock Text="Меню" FontSize="24" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    <Button Content="Продолжить игру" Command="{Binding ContinueGameCommand}" 
                            Style="{StaticResource GameButtonStyle}"
                            Margin="0,0,0,10" Padding="15,10" FontSize="16" Width="200"/>
                    <Button Content="Выйти из игры" Command="{Binding QuitGameCommand}" 
                            Style="{StaticResource GameButtonStyle}"
                            Padding="15,10" FontSize="16" Width="200"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
