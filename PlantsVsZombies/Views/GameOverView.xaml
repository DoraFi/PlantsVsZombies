<UserControl x:Class="PlantsVsZombies.Views.GameOverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:PlantsVsZombies.ViewModels"
             xmlns:visualControls="clr-namespace:PlantsVsZombies.VisualControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.DataContext>
        <viewModels:GameOverViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Image Source="/Assets/Icons/startNewGameBackground.png"/>
        
        <visualControls:CancelButton 
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="60,60,60,0"/>
        
        <Border Style="{StaticResource BorderStackPanelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="506">
                <TextBlock Text="Игра окончена!" Style="{StaticResource CenterTextStyle}" Width="426" Margin="0,40,0,30" FontSize="32"/>
                
                <TextBlock Text="Ваш счет:" Style="{StaticResource LeftTextStyle}" Margin="45,0,0,10"/>
                <Border Style="{StaticResource BorderStyle}">
                    <TextBlock Text="{Binding FinalScore, StringFormat='{}{0:F1}'}" 
                               Style="{StaticResource CenterTextStyle}" 
                               Width="426" 
                               FontSize="24"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </Border>
                
                <Grid Margin="40,30,40,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
        
                    <Border Grid.Column="0" HorizontalAlignment="Left">
                        <Button Content="Играть снова" Command="{Binding PlayAgainCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center" />
                    </Border>
        
                    <Border Grid.Column="1" HorizontalAlignment="Right">
                        <Button Content="Вернуться в меню" Command="{Binding BackToMainMenuCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
