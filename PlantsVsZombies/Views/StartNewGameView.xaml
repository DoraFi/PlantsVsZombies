<UserControl x:Class="PlantsVsZombies.Views.StartNewGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PlantsVsZombies.Converters"
             xmlns:viewModels="clr-namespace:PlantsVsZombies.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewModels:StartNewGameViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <local:LocationTypeConverter x:Key="LocationTypeConverter"/>
    </UserControl.Resources>
    <Grid Background="#FF2D5016">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Start New Game" FontSize="28" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            
            <TextBlock Text="Choose Location:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Locations}" SelectedItem="{Binding SelectedLocation}" 
                      Margin="0,0,0,20" Padding="5">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource LocationTypeConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Text="Initial Difficulty:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox Text="{Binding InitialDifficulty, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Padding="5"/>
            
            <Button Content="Start Game" Command="{Binding StartGameCommand}" 
                    Margin="0,0,0,10" Padding="10" FontSize="16"/>
            <Button Content="Back" Command="{Binding BackCommand}" 
                    Padding="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</UserControl>
