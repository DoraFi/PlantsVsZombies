<UserControl x:Class="PlantsVsZombies.Views.StartNewGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PlantsVsZombies.Converters"
             xmlns:viewModels="clr-namespace:PlantsVsZombies.ViewModels"
             xmlns:views="clr-namespace:PlantsVsZombies.Views"
             xmlns:visualControls="clr-namespace:PlantsVsZombies.VisualControls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    
    <UserControl.DataContext>
        <viewModels:StartNewGameViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <local:LocationTypeConverter x:Key="LocationTypeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Image Source="/Assets/Icons/startNewGameBackground.png"></Image>
        
        <visualControls:CancelButton 
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="60,60,60,0"/>
        
        <Border Style="{StaticResource BorderStackPanelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="506" >
                <TextBlock Text="Создай свою игру:" Style="{StaticResource CenterTextStyle}" Width="426" Margin="0,40,0,30"/>
                
                <TextBlock Text="Выбери локацию:" Style="{StaticResource LeftTextStyle}"/>
                <visualControls:LocationCarousel 
                    Locations="{Binding Locations}"
                    SelectedLocation="{Binding SelectedLocation, Mode=TwoWay}"
                    Height="320"
                    Width="426"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20"/>
                
                <TextBlock Text="Задай начальную сложность:" Style="{StaticResource LeftTextStyle}"/>
                <Border Style="{StaticResource BorderStyle}">
                    <TextBox Text="{Binding StartDifficulty, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxStyle}" Width="426"/>
                </Border>
                
                
                <Grid Margin="40,0,40,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
        
                    <Border Grid.Column="0"  HorizontalAlignment="Left">
                        <Button Content="Начать игру" Command="{Binding StartGameCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center" />
                    </Border>
        
                    <Border Grid.Column="1"  HorizontalAlignment="Right">
                        <Button Content="Вернуться в меню" Command="{Binding BackCommand}" 
                                Style="{StaticResource GameButtonStyle}" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
